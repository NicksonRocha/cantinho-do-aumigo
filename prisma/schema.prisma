generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  pets Pet[] // ‚Üê rela√ß√£o 1:N
}

model Pet {
  id          Int         @id @default(autoincrement())
  name        String
  breed       String
  color       String
  size        String
  sex         String
  ageMonths   Int
  weightKg    Float?
  temperament String?
  description String
  // Se quiser manter uma capa gerada a partir das imagens, pode remover este campo:
  imageUrl    String?     // opcional
  vaccinated  Boolean?    @default(false)
  neutered    Boolean?    @default(false)
  dewormed    Boolean?    @default(false)

  contactPhone String?

  authorId    Int
  author      User        @relation(fields: [authorId], references: [id])

  images      PetImage[]  // üëà rela√ß√£o 1-N

  createdAt   DateTime    @default(now())
}

model PetImage {
  id        Int    @id @default(autoincrement())
  petId     Int
  pet       Pet    @relation(fields: [petId], references: [id], onDelete: Cascade)

  publicId  String // üëà ex.: "cantinho-aumigo/pets/abCDef123"
  position  Int    // üëà 1..4

  // Constraints √∫teis
  @@unique([petId, position])  // uma posi√ß√£o por pet
  @@index([petId])
}
